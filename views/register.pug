extends ./layouts/common


block content

  .small-block
    .pb-3
      h3.text-success Đăng ký làm gia sư
      .mt-4.mb-3

      //- if errors
      //-   each error in errors
      //-     .alert.alert-danger= error

      form(method='POST', action='/signup/tutor')
        .form-group
          .input-group
            input#name.form-control(name='name', type='text', value=values?values.name: "", placeholder='Họ tên của bạn', required='')
        .form-group
          .input-group
            input#email.form-control(name='email', type='email', value=values?values.email: "", placeholder='Địa chỉ email', required='')
        .form-group
          .input-group
            input#password.form-control(name='password', type='password', placeholder='Mật khẩu', required='')
        
        .form-group.mt-4

          input.btn.btn-primary.mt-3.font-weight-bold(type='submit', value='Đăng Ký Ngay')
 

      p.my-lead.mt-5.mb-0.text-center
        span Bạn đã có tài khoản?
        a.d-inline-block.text-underline.ml-2(href='/login') Đăng nhập

      if errors
        each error in errors
          li
            small(style='color:red')= error