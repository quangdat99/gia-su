extends ../layouts/common


block content
	h1 Danh sách phụ huynh đăng ký

	div(style='overflow-x:auto;')


		table.table.table-bordered
			thead
				tr
					th Họ tên 	
					th Điện Thoại  
					th Địa chỉ 
					th Ghi chú 
					th Xóa 
			tbody
				each _phuhuynh in phuhuynh	
